{
  "name": "C++ & Python Dev Container",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "features": {
    "ghcr.io/devcontainers/features/vcpkg:1": {
      "vcpkgJsonPath": "/workspaces/agentic-nids/.devcontainer/vcpkg.json"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "ms-vscode.cpptools",
        "ms-python.python"
      ]
    }
  },
  "forwardPorts": [],
  "postCreateCommand": "cd agent && uv sync"
}
